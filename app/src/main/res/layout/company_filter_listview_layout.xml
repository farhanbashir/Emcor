<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filter_colors"
    android:orientation="horizontal" android:padding="15dp"
    >

    <ImageView
        android:id="@+id/divisions_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/building_img"/>

    <TextView
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="@color/download_list"
        android:id="@+id/divisions_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:text="TextView" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/division_arrow"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow_transparent"/>

</LinearLayout>