<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="header">
        <item name="android:background" >#1a7d7f</item>
    </style>

    <style name="background">
        <item name="android:background">#F6F6F6</item>
    </style>

    <style name="heading">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="headingBig">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="textGreen">

        <item name="android:textColor" >#1a7d7f</item>
    </style>

    <style name="mainBG">
        <item name="android:background">#393939</item>
    </style>

    <style name="homeImage">
        <item name="android:background">#ea6559</item>
    </style>

    <style name="homeButton">
        <item name="android:background">#8E8882</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">Montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="homeButtonWhite">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">Montserrat</item>

        <item name="android:textSize">15dp</item>
    </style>

    <style name="homeText">
        <item name="android:textColor">#636363</item>
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/locations_tab_background_unselected</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/locations_tab_background_selected</item>
    </style>

    <style name="Widget.TabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
